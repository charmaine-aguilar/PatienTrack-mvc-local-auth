<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PatienTrack</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <nav class="navbar p-3">
        <section class="containerBox mr-auto d-flex align-items-center">
            <img src="/css/images/PatienTrack-logo-transparent.png" alt="PatienTrack logo" class="company-logo">
        </section>

        <!-- Dropdown for profile -->
        <section class="ml-auto">
            <section class="dropdown d-flex">
                <button class="btn dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Welcome, User!
                </button>
                
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">My Profile</a></li>
                    <li><a class="dropdown-item" href="#">Settings</a></li>
                </ul>
            </section>
        </section>
    </nav>


    <section class="dashboard-container vh-100 p-5">

        <section class="form-container container-fluid d-flex flex-column p-5 w-50 align-items-center border rounded">

            <!-- Page navigation -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item" id="toHomePage"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Patients</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Browse patients</li>
                </ol>
            </nav>

            <form class="d-flex container-fluid py-3" role="search">
                <!-- <input class="form-control me-2" type="search" placeholder="Enter name" aria-label="Search">
                <button class="btn btn-primary" type="submit">Search</button> -->
                <section class="d-flex container-fluid justify-content-end py-3">
                    <button id="toAddPatientPage" class="btn btn-primary" type="button">Add Patient</button>
                </section>
            </form>

            <table class="table table-hover">
                <thead>
                    <tr>
                    <th scope="col">Patient ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">DOB</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < patients.length; i++) { %>
                        <tr class="patientInfo">
                            <td class="patientID"><%= patients[i].patientID %></td>
                            <td class="patientFirstName"><%= patients[i].firstName %></td>
                            <td class="patientLastName"><%= patients[i].lastName %></td>
                            <td class="patientDOB"><%= patients[i].dateOfbirth %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            
    </section>

    
<!-- Main.js -->
<script src="/js/main.js"></script>

<!-- Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>