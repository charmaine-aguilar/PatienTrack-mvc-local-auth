<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PatienTrack</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <nav class="navbar p-3">
        <section class="containerBox mr-auto d-flex align-items-center">
            <img src="/css/images/PatienTrack-logo-transparent.png" alt="PatienTrack logo" class="company-logo">
        </section>

        <!-- Dropdown for profile -->
        <section class="ml-auto">
            <section class="dropdown d-flex">
                <button class="btn dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Welcome, User!
                </button>
                
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">My Profile</a></li>
                    <li><a class="dropdown-item" href="#">Settings</a></li>
                </ul>
            </section>
        </section>
    </nav>


    <section class="dashboard-container vh-100 p-5">

        <form class="form-container container-fluid d-flex flex-column p-5 w-50 align-items-center border rounded" method="POST">

            <!-- Page navigation -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item" id="toHomePage"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Patients</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Add patient</li>
                </ol>
            </nav>

            <section class="add-patient-form-group container-fluid d-flex flex-column row-gap-4">
                <span>* <sub>Required fields.</sub></span>
    
                <!-- First Name & Last Name -->
                <section class="d-flex gap-4">
                    <section>
                        <label for="exampleFormControlInput1" class="form-label">First Name<span> *</span></label>
                        <input type="text" class="form-control shadow-sm" name="firstName" id="firstName" placeholder="John" required>
                    </section>
                    <section>
                        <label for="exampleFormControlInput1" class="form-label">Last Name<span> *</span></label>
                        <input type="text" class="form-control shadow-sm" name="lastName" id="lastName" placeholder="Doe">
                    </section>
                </section>
    
                <!-- DOB -->
                <section class="d-flex gap-4">
                    <section>
                        <label for="exampleFormControlInput1" class="form-label">Date of Birth<span> *</span> </label>
                        <input type="date" class="form-control shadow-sm" name="dateOfbirth" id="dateOfbirth" placeholder="John">
                    </section>
                </section>
    
                <!-- Submit button -->
                <section class="d-flex justify-content-end gap-3 align-items-center">
                    <button type="submit" class="btn btn-primary">Add patient</button>
                    <button type="button" class="btn btn-link toBrowsePatientPage">Go to patient list</button>
                </section>
            </section>
        </form>
    </section>

